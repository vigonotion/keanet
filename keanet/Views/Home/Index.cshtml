@{
    ViewData["Title"] = "KEANet";
}

<h1>KEANet</h1>
<div>
    <input type="checkbox" id="chkInternetConnection" value="true">
    <label for="chkInternetConnection">Internet connection</label>
    <br>
    <label for="txtPhoneLines">Phone lines</label>
    <input type="number" id="txtPhoneLines" value="0" min="0" max="8">
    <br>
    <label for="cmbCellPhones">Cell phones:</label>
    <br>
    <table>
        <tr>
            <td>
                <select id="txtCellPhones" size="5">

                    @foreach(ServiceModel service in Prices.sPrices.PriceList)
                    {
                        <option value="@service.ID">@service.Name</option>
                    }
                </select>
            </td>
            <td>
                <input type="button" value="&gt;" id="add">
                <br>
                <input type="button" value="&lt;" id="remove">
            </td>
            <td>
                <select id="txtChosenCellPhones" size="5" style="width: 150px">
                </select>
            </td>
        </tr>
    </table>
    <br>
    Total price: <span id="price">0</span> DKK
    <br>
    <input type="submit" value="Buy">
</div>